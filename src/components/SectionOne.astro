---
import { Icon } from "astro-icon";
---
<section class="first-section-container">
    <div class="first-section">
        <div class="text-container">
            <h2 class="title">Best Digital Agency Whole Online Today.</h2>
            <div class="first-section-body">
                <div>
                    <p class="text-body">We help to create best products properly & our team also collaborate with our clients.</p>
                </div>
                <div class="first-section-buttons">
                    <button class="button blue">
                        <a href="#">Get Started</a>
                    </button>
                    <button class="button">
                        <a href="#" class="works">
                            How it works
                            <Icon name="mdi:play" width="30" class="play" />
                        </a>
                    </button>
                </div>
            </div>
            <div class="clients">
                <p>Over <span class="clients-number">13,000+ Client</span> all over the world</p>
            </div>
        </div>
        <div class="image-container">
            <img src="https://ionuser13.github.io/Delta-Project/assets/main-image-delta.png" alt="" class="illustration">
        </div>
    </div>
</section>
<style lang="css">
    .first-section-container {
        width: 100%;
        margin-bottom: 160px;
    }
    .first-section {
        max-width: 1440px;
        display: flex;
        align-items: flex-start;
        margin-left: 4rem;
        height: min-content;
    }
    .text-container {
        width: 50%;
    }
    .title {
        font-size: 4rem;
    }
    .image-container {
        width: 50%;
    }
    .illustration {
        width: 100%;
    }
    .first-section-body {
        display: flex;
        flex-direction: column;
    }
    .button {
        font-size: 16px;
        background: transparent;
        border-radius: 32px;
        cursor: pointer;
        padding: 16px 32px;
        white-space: nowrap;
        text-decoration: none;
        border: none;
    }
    .text-body {
        margin: 32px 0;
        font-size: 2rem;
        width: 90%;
    }
    .blue {
        background-color: var(--body-blue);
        color: var(--white)
    }
    .works {
        display: flex;
        align-items: center;
        gap: 16px
    }
    .play {
        background-color: var(--light-grey);
        border-radius: 50%;
    }
    .clients {
        font-size: 16px;
        color: var(--light-grey);
        margin-top: 16px;
    }
    .clients span {
        color: var(--title-text);
        font-size: 24px;
        font-weight: bold;
    }
    /*  */
    @media (max-width: 460px) {
        .first-section-container {
            margin-bottom: 80px;
        }
        .text-container {
            width: 100%;
        }
        .image-container {
            display: none;
        }
    }
    @media (min-width: 769px) {
        .title {
            font-size: 6rem;
        }
    }
    @media (min-width: 1048px) {
        .title {
            font-size: 8rem;
        }
    }
    @media (min-width: 1526px) {
        .first-section {
            margin: 0 auto;
        }
    }


</style>